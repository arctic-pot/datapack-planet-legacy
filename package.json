{
  "name": "datapack-planet",
  "productName": "datapack-planet",
  "version": "1.0.0",
  "description": "A text editor for Minecraft DataPack",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "dev": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "format": "prettier --write \"src/**/*.{tsx,ts,js}\"",
    "format:check": "npx prettier --list-different \"src/**/*.{tsx,ts,js}\""
  },
  "keywords": [],
  "author": "The DataPack Planet team",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "datapack_planet"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@types/fs-extra": "^9.0.8",
    "@types/jquery": "^3.5.5",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/webpack-asset-relocator-loader": "^1.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^4.2.1",
    "electron": "^11.2.1",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "prettier": "^2.2.1",
    "sass": "^1.32.6",
    "sass-loader": "^10.1.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@fluentui/react": "^7.158.1",
    "@fluentui/styles": "^0.52.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "jquery": "^3.5.1",
    "node-watch": "^0.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-intl": "^5.12.3"
  }
}
